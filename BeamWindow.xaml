<Window x:Class="Beam.BeamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:beam="clr-namespace:Beam"
        Title="Beam" Height="220" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" SizeChanged="Window_SizeChanged_1" SnapsToDevicePixels="True">
    <Grid>
        
        <Grid Name="grdSignIn" Width="295" HorizontalAlignment="Left" >
            <Button Name="btSignIn" Content="Sign In" HorizontalAlignment="Center" Height="43" Margin="30,110,35,0" VerticalAlignment="Top" Width="230" Click="btSignIn_Click"/>
        </Grid>

        
        <Grid Name="grdPIN" Margin="295,0,0,0"  Width="295" HorizontalAlignment="Left">
            <TextBox x:Name="tbPIN" Style="{StaticResource placeHolder}" Tag="Insert PIN Here" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="23" Margin="0,50,0,0" VerticalAlignment="Top" Width="230"/>
            <Button Name="btPinAuth" Content="Into The Beam" HorizontalAlignment="Center" VerticalAlignment="Top" Height="43" Margin="0,100,0,0"  Width="230" Click="btPinAuth_Click"/>
            <TextBlock x:Name="tbSlideBack" HorizontalAlignment="Center" Height="22" Margin="0,165,0,0" TextWrapping="Wrap" Text="&lt;&lt; Wait! Let Me Take Back" VerticalAlignment="Top" />
        </Grid>

        <Grid Name="grdMother" Visibility="Hidden" OverridesDefaultStyle="True" UseLayoutRounding="True" >
            <TabControl x:Name="beamTab" TabStripPlacement="Left" SelectionChanged="beamTab_SelectionChanged" >
                <TabItem x:Name="tabTimeline">
                    <TabItem.Header>
                        <StackPanel>
                            <Image x:Name="twitter_on" Source="/Beam;component/Assets/twitter_on.png"  />
                            <Image x:Name="twitter_off" Source="/Beam;component/Assets/twitter_off.png" Visibility="Collapsed" />
                        </StackPanel>
                    </TabItem.Header>
                    <ListView x:Name="listTweet" ItemContainerStyle="{DynamicResource AltItemBackground}" AlternationCount="2" SelectionMode="Single" ScrollViewer.CanContentScroll="False" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="답장(_R)" />
                                <MenuItem Header="리트윗(_T)" />
                                <MenuItem Header="관심글(_F)" />
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                </TabItem>
                
                <TabItem x:Name="tabMention">
                    <TabItem.Header>
                        <StackPanel>
                            <Image x:Name="mention_on" Source="/Beam;component/Assets/mention_on.png" Visibility="Collapsed" />
                            <Image x:Name="mention_off" Source="/Beam;component/Assets/mention_off.png" />
                        </StackPanel>
                    </TabItem.Header>
                    <ListView x:Name="listReply" Visibility="Hidden" ItemContainerStyle="{DynamicResource AltItemBackground}" AlternationCount="2" SelectionMode="Single" ScrollViewer.CanContentScroll="False" ScrollViewer.HorizontalScrollBarVisibility="Hidden"  />
                </TabItem>
                
                <TabItem x:Name="tabMessage">
                    <TabItem.Header>
                        <StackPanel>
                            <Image x:Name="message_on" Source="/Beam;component/Assets/message_on.png" Visibility="Collapsed" />
                            <Image x:Name="message_off" Source="/Beam;component/Assets/message_off.png" />
                        </StackPanel>
                    </TabItem.Header>
                    <ListView x:Name="listDM"    Visibility="Hidden" ItemContainerStyle="{DynamicResource AltItemBackground}" AlternationCount="2" SelectionMode="Single" ScrollViewer.CanContentScroll="False" ScrollViewer.HorizontalScrollBarVisibility="Hidden"  />
                </TabItem>
            </TabControl>
            
            
        </Grid>
    </Grid>

</Window>
