<Window x:Class="Beam.BeamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:beam="clr-namespace:Beam"
        Title="Beam" Height="220" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" SizeChanged="Window_SizeChanged_1" SnapsToDevicePixels="True">
    <Grid>
        
        <Grid Name="grdSignIn" Width="295" Visibility="Visible" HorizontalAlignment="Left" >
            <Button Name="btSignIn" Content="Sign In" HorizontalAlignment="Center" Height="43" Margin="30,110,35,0" VerticalAlignment="Top" Width="230" Click="btSignIn_Click"/>
            <Slider HorizontalAlignment="Left" Height="24" Margin="32,48,0,0" VerticalAlignment="Top" Width="228" Value="5"/>
        </Grid>

        
        <Grid Name="grdPIN" Margin="295,0,0,0"  Width="295" HorizontalAlignment="Left">
            <TextBox x:Name="tbPIN" Style="{StaticResource placeHolder}" Tag="Insert PIN Here" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="23" Margin="0,50,0,0" VerticalAlignment="Top" Width="230"/>
            <Button Name="btPinAuth" Content="Into The Beam" HorizontalAlignment="Center" VerticalAlignment="Top" Height="43" Margin="0,100,0,0"  Width="230" Click="btPinAuth_Click"/>
            <TextBlock x:Name="tbSlideBack" HorizontalAlignment="Center" Height="22" Margin="0,165,0,0" TextWrapping="Wrap" Text="&lt;&lt; Wait! Let Me Take Back" VerticalAlignment="Top" />
        </Grid>

        <Grid Name="grdMother" Visibility="Collapsed" OverridesDefaultStyle="True" UseLayoutRounding="True" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="56" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Width="36">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Margin" Value="0,0,0,5" />
                    </Style>
                </StackPanel.Resources>
                <Image x:Name="timeline" Source="/Beam;component/Assets/twitter_on.png"  />
                <Image x:Name="mention" Source="/Beam;component/Assets/mention_off.png" />
                <Image x:Name="message" Source="/Beam;component/Assets/message_off.png" />
            </StackPanel>
            
            <ListView Grid.Column="1" x:Name="listTweet" ItemContainerStyle="{DynamicResource AltItemBackground}" AlternationCount="2" SelectionMode="Single" ScrollViewer.CanContentScroll="False" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="답장(_R)" />
                        <MenuItem Header="리트윗(_T)" />
                        <MenuItem Header="관심글(_F)" />
                    </ContextMenu>
                </ListView.ContextMenu>
            </ListView>
        </Grid>
    </Grid>

</Window>
