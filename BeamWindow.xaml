<Window x:Class="Beam.BeamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Beam" Height="300" Width="300">
    <Grid>
        <TextBox Name="tbUsername" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" Style="{StaticResource placeHolder}" Tag="Username" Height="25" Width="230" TextWrapping="Wrap"/>
        <PasswordBox Name="pbPassword" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,130,0,0" Tag="Password" Height="25" Width="230"/>
        <Button Name="btSignIn" Content="Sign In" HorizontalAlignment="Center" Height="43" Margin="0,170,0,0" VerticalAlignment="Top" Width="230"/>
    </Grid>
</Window>
