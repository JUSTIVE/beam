<Window x:Class="Beam.BeamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Beam" Height="220" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" SizeChanged="Window_SizeChanged_1">
    <Grid>
        

        <Grid Name="grdSignIn" Width="295" HorizontalAlignment="Left">
            <Button Name="btSignIn" Content="Sign In" HorizontalAlignment="Center" Height="43" Margin="0,120,0,0" VerticalAlignment="Top" Width="230" Click="btSignIn_Click"/>
        </Grid>

        <Grid Name="grdPIN" Margin="295,0,0,0"  Width="295" HorizontalAlignment="Left">
            <TextBox x:Name="tbPIN" Style="{StaticResource placeHolder}" Tag="Insert PIN Here" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="23" Margin="0,50,0,0" VerticalAlignment="Top" Width="230"/>
            <Button Name="btPinAuth" Content="Into The Beam" HorizontalAlignment="Center" VerticalAlignment="Top" Height="43" Margin="0,100,0,0"  Width="230" Click="btPinAuth_Click"/>
            <TextBlock x:Name="tbSlideBack" HorizontalAlignment="Center" Height="22" Margin="0,165,0,0" TextWrapping="Wrap" Text="&lt;&lt; Wait! Let Me Take Back" VerticalAlignment="Top" />
        </Grid>
        
        <Grid Name="grdMother" Visibility="Hidden">
            
            <Grid VerticalAlignment="Bottom">
                <TextBox x:Name="tbTweet"  MinHeight="25" KeyDown="tbTweet_KeyDown" />
            </Grid>
        </Grid>
    </Grid>

</Window>
